<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/check_box_item_crime_solved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/crime_title_item_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/check_box_item_crime_solved"
        android:padding="4dp"
        android:textStyle="bold"
        tools:text="Title"/>

    <TextView
        android:id="@+id/crime_date_item_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/crime_title_item_text_view"
        android:layout_toLeftOf="@id/check_box_item_crime_solved"
        android:padding="4dp"
        tools:text="Date"/>


</RelativeLayout>